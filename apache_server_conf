<VirtualHost *:8080>
   LoadModule php7_module /opt/circleci/php/7.0.7/libexec/apache2/libphp7.so

   DocumentRoot /home/ubuntu/PHPLaravelSpike/apache_server_conf/public
   ServerName host.example.com
   <FilesMatch \.php$>
   SetHandler application/x-httpd-php
  </FilesMatch>
</VirtualHost>
